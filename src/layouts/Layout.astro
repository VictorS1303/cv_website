---
import '../style/style.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

const {title} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body>
    <Header />
        <main>
            <slot />
        </main>
    <Footer />
</body>
</html>

<style>
    div
    {
        height: 100vh;
        width: 100vw;
    }
    
    div:nth-child(odd)
    {
        background-color: var(--odd-section-background-color);
        color: var(--odd-section-text-color);
    }

    div:nth-child(even)
    {
        background-color: var(--even-section-background-color);
        color: var(--even-section-text-color);
    }
</style>