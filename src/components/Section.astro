---
const {className, id} = Astro.props
---

<section class={className} id={id}>
    <div class="section-wrapper">
        <slot />
    </div>
</section>


<style>
    section
    {
        height: 100vh;
        width: 100vw;
        scroll-snap-align: start;

        &:is(:nth-child(even), :nth-child(odd)) > div
        {
            display: flex;
            justify-content: center;
            flex-direction: column;
            align-items: center;
            text-align: center;
            gap: 20px;
            height: inherit;
            width: inherit;
        }

        &:nth-child(odd) > div
        {
            background-color: var(--odd-section-background-color);
            color: var(--odd-section-text-color);
        }

        &:nth-child(even) > div
        {
            background-color: var(--even-section-background-color);
            color: var(--even-section-text-color);

            & p
            {
                color: var(--even-section-paragraph-color);
            }
        }
    }

 

    @media screen and (min-width: 768px)
    {
        section:is(:nth-child(odd), :nth-child(even)) > div
        {
            flex-direction: row;
            justify-content: space-around;
        }
    }
</style>

