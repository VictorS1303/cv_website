<style>
    .profile-image
    {
        clip-path: polygon(50% 0%, 90% 20%, 100% 60%, 75% 100%, 25% 100%, 0% 60%, 10% 20%);
        height: 200px;
        width: 200px;
        border-radius: 10px;
    }
    
    i.fas.fa-chevron-down
    {
        position: absolute;
        bottom: 30px;
        font-size: calc(var(--chevron-font-size) * 1.3);
        animation: downFade .8s linear infinite;
    }

    @keyframes downFade
    {
        from
        {
            opacity: 1;
            bottom: 30px;
        }
        to
        {
            opacity: 0;
            bottom: 10px;
        }
    }
</style>